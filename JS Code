var num=0;
var num1=0;
var num2=0;
var eqRep=false;
var addNumFlag=false;
var subNumFlag=false;
var divNumFlag=false;
var timesNumFlag=false;

function Num(a){
  if(eqRep===false){
    num=(document.getElementById('textBox').value)*1;
    num=num*10;
    num=num+a;
    document.getElementById('textBox').value=num;
    return;
  }
  if(eqRep===true){
    eqRep=false;
    num=(document.getElementById('textBox').value)*0;
    num=num*10;
    num=num+a;
    document.getElementById('textBox').value=num;
    return;
  }
}

function addNum(){
  if(eqRep===true){
    num1=(document.getElementById('textBox').value)*1;
    document.getElementById('textBox').value='';
    addNumFlag=true;
    eqRep=false;
    divNumFlag=false;
    subNumFlag=false;
    timesNumFlag=false;
    return;
  }
  if (subNumFlag===true || divNumFlag===true || timesNumFlag===true){
    equals();
    subNumFlag=false;
    divNumFlag=false;
    timesNumFlag=false;
    addNumFlag=true;
    return;
  }
  if(addNumFlag===true && num2===0){return;}
  num1=(document.getElementById('textBox').value)*1;
  document.getElementById('textBox').value='';
  addNumFlag=true;
  subNumFlag=false;
  divNumFlag=false;
  timesNumFlag=false;
  eqRep=false;
}

function subNum(){
  if(eqRep===true){
    num1=(document.getElementById('textBox').value)*1;
    document.getElementById('textBox').value='';
    subNumFlag=true;
    eqRep=false;
    addNumFlag=false;
    divNumFlag=false;
    timesNumFlag=false;
    return;
  }
  if (addNumFlag===true || divNumFlag===true || timesNumFlag===true){
    equals();
    addNumFlag=false;
    subNumFlag=false;
    timesNumFlag=false;
    subNumFlag=true;
    return;
  }
  if(subNumFlag===true && num2===0){return;}  
  num1=(document.getElementById('textBox').value)*1;
  document.getElementById('textBox').value='';
  subNumFlag=true;
  addNumFlag=false;
  subNumFlag=false;
  timesNumFlag=false;
  eqRep=false;
}

function divNum(){
  if(eqRep===true){
  num1=(document.getElementById('textBox').value)*1;
  document.getElementById('textBox').value='';
  divNumFlag=true;
  eqRep=false;
  addNumFlag=false;
  subNumFlag=false;
  timesNumFlag=false;
  return;
  }
  if (addNumFlag===true || subNumFlag===true || timesNumFlag===true){
    equals();
    addNumFlag=false;
    subNumFlag=false;
    timesNumFlag=false;
    divNumFlag=true;
    return;
  }
  if(divNumFlag===true && num2===0){return;}
  num1=(document.getElementById('textBox').value)*1;
  document.getElementById('textBox').value='';
  divNumFlag=true;
  eqRep=false;
  addNumFlag=false;
  subNumFlag=false;
  timesNumFlag=false;
}

function timesNum(){
  if(eqRep===true){
    num1=(document.getElementById('textBox').value)*1;
    document.getElementById('textBox').value='';
    timesNumFlag=true;
    eqRep=false;
    addNumFlag=false;
    subNumFlag=false;
    divNumFlag=false;
    return;
  }
  if (addNumFlag===true || subNumFlag===true || divNumFlag===true){
    equals();
    addNumFlag=false;
    subNumFlag=false;
    divNumFlag=false;
    timesNumFlag=true;
    return;
  }
  if(timesNumFlag===true && num2===0){return;}
  num1=(document.getElementById('textBox').value)*1;
  document.getElementById('textBox').value='';
  timesNumFlag=true;
  eqRep=false;
  addNumFlag=false;
  subNumFlag=false;
  divNumFlag=false;
}

function clearNum(){
  document.getElementById('textBox').value=0;
  num=0;
  num1=0;
  num2=0;
  eqRep=false;
  addNumFlag=false;
  subNumFlag=false;
  divNumFlag=false;
  timesNumFlag=false;
}

function equals(){
  if(eqRep===false){
    num2=(document.getElementById('textBox').value)*1;
    if(addNumFlag===true){
      num1=num1+num2;
      document.getElementById('textBox').value=num1;
    }
    if(subNumFlag===true){
      num1=num1-num2;
      document.getElementById('textBox').value=num1;
    }
    if(divNumFlag===true){
      num1=num1/num2;
      document.getElementById('textBox').value=num1;
    }
    if(timesNumFlag===true){
      num1=num1*num2;
      document.getElementById('textBox').value=num1;
    }
  eqRep=true;
  return;
  }
  if(eqRep===true){
    if(addNumFlag===true){
      num1=num1+num2;
      document.getElementById('textBox').value=num1;
    }
    if(subNumFlag===true){
      num1=num1-num2;
      document.getElementById('textBox').value=num1;
    }
    if(divNumFlag===true){
      num1=num1/num2;
      document.getElementById('textBox').value=num1;
    }
    if(timesNumFlag===true){
      num1=num1*num2;
      document.getElementById('textBox').value=num1;
    }
  }
}
